.weui-search-bar{
  position:relative;padding:14px 10px;display:-webkit-box;display:-webkit-flex;display:flex;box-sizing:border-box;background-color:#efeff4;border-top:1rpx solid #d7d6dc;border-bottom:1rpx solid #d7d6dc}

.weui-icon-search{
  margin-right:8px;font-size:inherit}

.weui-icon-search_in-box{
  position:absolute;left:10px;top:7px}

.weui-search-bar__text{
  display:inline-block;font-size:16px;vertical-align:middle}

.weui-search-bar__form{
  position:relative;-webkit-box-flex:1;-webkit-flex:auto;flex:auto;border-radius:5px;background:#fff;border:1rpx solid #e6e6ea}

.weui-search-bar__box{
  position:relative;padding-left:30px;padding-right:30px;width:100%;box-sizing:border-box;z-index:1}

.weui-search-bar__input{
  height:28px;line-height:28px;font-size:14px}

.weui-icon-clear{
  position:absolute;top:0;right:0;padding:6px 8px;font-size:18px}

.weui-search-bar__label{
  position:absolute;top:0;right:0;bottom:0;left:0;z-index:2;border-radius:3px;text-align:center;color:#9b9b9b;background:#fff;line-height:28px}

.weui-search-bar__cancel-btn{
  margin-left:14px;line-height:34px;color:#09bb07;white-space:nowrap}